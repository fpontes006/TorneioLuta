@model List<TorneioLuta.Dominio.Entidades.Lutadores>;
@using TorneioLuta.Dominio.Entidades;

@{
    ViewData["Title"] = "Lutadores";
}


<div class="row">
    <div class="col-12 mb-4">
        <div class="text-center">
            <h1 class="display-4">Torneio de Lutas</h1>
            @if (Model != null)
            {
                <p>
                    Selecione <span>16</span> lutadores para iniciar o torneio.
                </p>
            }
            else
            {
                <h2 class="text-danger">
                    Não foi possivel buscar as informações dos lutadores.
                </h2>
            }
        </div>
    </div>

</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-12 mb-3">
            <button type="button" id="botaoEnviar" class="btn btn-primary">Iniciar</button>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        @foreach (var item in Model!)
        {
            <div class="col-3 mb-3">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <input class="form-check-input" type="checkbox" value="@item.Id" id="@item.Id"><h4 class="my-0 fw-normal">@item.Nome</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Idade: @item.Idade</li>
                            <li>Lutas: @item.Lutas</li>
                            <li>Derrotas: @item.Derrotas</li>
                            <li>Vitórias: @item.Vitorias</li>
                            <li>Artes Marcias: @item.ArtesMarciais?.Count()</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}
